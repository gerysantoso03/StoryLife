<main>
<div id="wrapper" class="row container">
    <div id="show-card" id="card" class="card light-blue lighten-5 col s12 m8">
        <h3>{{story.title}}
            <small>{{{editIcon story.user user story._id false}}}</small>
        </h3>
        <div class="card story">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{story.body}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card light-blue lighten-5 center-align">
            <div class="card-content">
                <span id="title-card" class="card-title">{{story.user.fullName}}</span>
                <img src="{{story.user.image}}" class="circle responsive-img img-small">
            </div>
            <div id="more-action" class="card-action">
                <a href="/stories/user/{{story.user._id}}">More From {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>
</main>
